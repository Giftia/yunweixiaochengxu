/* pages/maintainIng/maintainIng.wxss */

.title {
  font-size: 32rpx;
  margin: 30rpx 0;
}

.repair-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #a1a1a1;
}

.repair-left {
  height: 348rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.repair-right {
  height: 348rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.repair-check {
  display: inline-block;
  padding: 5px 5px;
  height: 35rpx;
  text-align: center;
  line-height: 35rpx;
}

.active {
  color: #4ac39a;
  border: 1px #4ac39a solid;
}

checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  line-height: 35rpx;
  font-size: 30rpx;
  color: #4ac39a;
}

textarea {
  width: 670rpx;
  height: 450rpx;
  display: block;
  position: relative;
  border: 1px #ccc solid;
  padding: 10rpx 10rpx;
  font-size: 30rpx;
  border-radius: 16rpx;
  background: #eee;
}

.length-style {
  font-size: 28rpx;
  color: #ccc;
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
}

.buttonBox {
  display: -webkit-flex;
  position: absolute;
  left: 0;
  bottom: 20px;
  width: 100%;
  background: #fff;
}
