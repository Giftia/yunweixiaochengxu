<!--pages/address/address.wxml-->
<view style='padding:30rpx'>
  <view class='flex-between' style='border-bottom:1px #A8A8A8 solid;padding-bottom:20px;margin-bottom:20px'>
    <view class='flex-center'>
      <view style='width:160rpx;font-size:32rpx;color:#808080;margin-right:10px;'>收货人：</view>
      <input placeholder='请输入姓名' style='font-size:30rpx;' placeholder-style='color:#BFBFBF'></input>
    </view>
    <image src='../image/my-icon.png' style=' width: 50rpx; height: 50rpx;'></image>
  </view>

  <view class='flex-between' style='border-bottom:1px #A8A8A8 solid;padding-bottom:20px;margin-bottom:20px'>
    <view class='flex-center'>
      <view style='width:160rpx;font-size:32rpx;color:#808080;margin-right:10px;'>联系电话：</view>
      <input placeholder='请输入电话' style='font-size:30rpx;' placeholder-style='color:#BFBFBF' maxlength='11'></input>
    </view>
  </view>

  <view style='padding-bottom:20px;margin-bottom:20px'>
    <view>
      <view style='font-size:32rpx;color:#808080;margin-bottom:20rpx;'>详情地址：</view>
      <textarea placeholder='请输入详细地址信息，如道路，门牌号，小区，楼栋号，单元室等' style='font-size:30rpx;width:100%;height:80rpx' placeholder-style='color:#BFBFBF'></textarea>
    </view>
  </view>

  <view class='buttonBox'>
    <button style='background:#343E4A;color:#fff;width:85%' form-type='submit'>保 存</button>
  </view>

</view>